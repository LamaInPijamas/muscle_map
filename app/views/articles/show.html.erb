<div class="pt-20">
  <div class="max-w-3xl mx-auto p-6 bg-white shadow-md rounded-lg">
    <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= @article.title %></h1>

    <p class="text-gray-700 text-lg leading-relaxed mb-6"><%= @article.body %></p>

    <ul class="flex space-x-4">
      <li>
        <%= link_to "Edit", edit_article_path(@article), class: "text-blue-500 hover:text-blue-700 font-semibold" %>
      </li>
      <li>
        <%= link_to "Destroy", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700 font-semibold" %>
      </li>
    </ul>
  </div>
</div>
<div class="pt-20 max-w-lg mx-auto p-6 bg-white shadow-md rounded-lg">
  <%= form_with model: article, class: "w-full" do |form| %>
    <div class="mb-4">
      <%= form.label :title, class: "block text-gray-700 font-semibold mb-2" %>
      <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <% article.errors.full_messages_for(:title).each do |message| %>
        <div class="text-red-500 text-sm mt-1"><%= message %></div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= form.label :body, class: "block text-gray-700 font-semibold mb-2" %>
      <%= form.text_area :body, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      <% article.errors.full_messages_for(:body).each do |message| %>
        <div class="text-red-500 text-sm mt-1"><%= message %></div>
      <% end %>
    </div>

    <div class="text-center">
      <%= form.submit "Submit", class: "bg-blue-500 text-white font-semibold px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
    </div>
  <% end %>
</div>
<div class="pt-20">
  <div class="max-w-4xl mx-auto p-6">
    <h1 class="text-4xl font-extrabold text-center text-gray-900 mb-8">Articles</h1>

    <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @articles.each do |article| %>
        <li class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 p-4">
          <%= link_to article.title, article_path(article), class: "block text-xl font-semibold text-blue-600 hover:text-blue-800 mb-2" %>
          <p class="text-gray-600 text-sm">Published on <%= article.created_at.strftime("%B %d, %Y") %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>
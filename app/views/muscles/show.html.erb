<!-- Hero Section -->
<div class="relative bg-hero-gym text-white pt-36">
  <div class="relative container mx-auto px-4 py-24 text-center">
    <h1 class="text-6xl font-extrabold mb-4"><%= @muscle.name %></h1>
    <p class="text-xl mb-6"><%= @muscle.description %></p>
    <!-- Action Links -->
  </div>
</div>

<!-- Main Content -->
<div class="container mx-auto px-4 py-12">

  <!-- Exercise List Section -->
  <h2 class="text-4xl font-semibold mb-8 text-center text-gray-800">Exercises</h2>

  <% if @muscle.exercises.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @muscle.exercises.each do |exercise| %>
        <div class="bg-white p-6 rounded-lg shadow-lg">
          <!-- Exercise Image or Video -->
          <% if exercise.gif.attached? %>
            <%= image_tag exercise.gif, class: "w-full h-48 object-cover rounded-md mb-4", alt: "#{exercise.name} Image" %>
          <% elsif exercise.video.present? && exercise.video.include?("youtube.com") %>
            <div class="aspect-w-16 aspect-h-9 mb-4">
              <iframe
                src="<%= exercise.video.gsub('watch?v=', 'embed/') %>"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
                class="w-full h-full rounded-md shadow-lg">
              </iframe>
            </div>
          <% end %>

          <h3 class="text-2xl font-bold mb-2 text-center text-indigo-600"><%= exercise.name %></h3>
          <p class="text-gray-700 mb-4"><%= exercise.description %></p>
      <% end %>
  <% else %>
    <p class="text-gray-500 text-center text-xl">No exercises found for this muscle.</p>
  <% end %>
</div>
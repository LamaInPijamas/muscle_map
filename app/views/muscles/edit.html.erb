<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Edit Muscle</h1>

  <%= form_with(model: @muscle, local: true, class: "w-full max-w-lg") do |form| %>
    <% if @muscle.errors.any? %>
      <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        <h2 class="font-bold mb-2"><%= pluralize(@muscle.errors.count, "error") %> prohibited this muscle from being saved:</h2>
        <ul class="list-disc pl-5">
          <% @muscle.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-6">
      <%= form.label :description, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_area :description, rows: 5, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Update Muscle", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to 'Cancel', muscle_path(@muscle), class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
    </div>
  <% end %>
</div>
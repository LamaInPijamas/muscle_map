<div class="container mx-auto px-4 py-8 pt-36">
  <h1 class="text-3xl font-bold mb-8 text-center">Muscles List</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @muscles.each do |muscle| %>
      <div class="bg-white rounded-lg shadow-md p-6 flex flex-col justify-between hover:shadow-lg transition-shadow duration-300">
        <div>
          <h2 class="text-2xl font-semibold text-gray-800 mb-2">
            <%= link_to muscle.name, muscle_path(muscle), class: "hover:text-blue-600" %>
          </h2>
          <p class="text-gray-600 mb-4"><%= muscle.description %></p>
        </div>
        
        <%= link_to 'View Muscle', muscle_path(muscle), class: "mt-4 inline-block bg-blue-500 text-white font-bold py-2 px-4 rounded hover:bg-blue-600 transition duration-300" %>
      </div>
    <% end %>
  </div>
</div>
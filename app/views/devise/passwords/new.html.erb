<div class="pt-8 min-h-screen flex items-center justify-center px-4">
  <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-8 relative overflow-hidden">
    <h2 class="font-custom uppercase tracking-wide text-3xl font-bold text-gray-800 text-center mb-8">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field space-y-1">
        <%= f.label :email, class: "block font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "w-full py-2 text-white bg-indigo-600 hover:bg-indigo-700 rounded-md font-semibold tracking-wide" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    gsap.from("h2", { duration: 0.8, opacity: 0, y: -20, ease: "power3.out" });
    gsap.from(".field", { duration: 0.8, opacity: 0, y: 20, stagger: 0.2, ease: "power3.out" });
    gsap.from(".actions", { duration: 0.8, opacity: 0, scale: 0.9, delay: 0.4, ease: "back.out(1.7)" });
  });
</script>

<div class="pt-8 min-h-screen flex items-center justify-center px-4">
  <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-8 relative overflow-hidden">
    <h2 class="font-custom uppercase tracking-wide text-3xl font-bold text-gray-800 text-center mb-8">Log in</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <div class="field space-y-1">
        <%= f.label :email, class: "block font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div class="field space-y-1">
        <%= f.label :password, class: "block font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <div class="text-center">
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "px-4 py-2 text-gray-700 rounded hover:bg-gray-300 text-sm" %>
        </div>
      <% end %>

      <% if devise_mapping.rememberable? %>
        <div class="field flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 border-gray-300 rounded mr-2" %>
          <%= f.label :remember_me, class: "text-gray-700" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "w-full py-2 text-black bg-gray-200 hover:bg-gradient-to-r from-blue-400 via-purple-500 to-blue-400 hover:text-white transition duration-300 rounded-md font-semibold tracking-wide" %>
      </div>
    <% end %>
    <div class="text-center mt-4">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "inline-block px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 text-sm" %>
    </div>
  </div>
</div>

<script>
  // Make sure GSAP is included. If using a CDN, ensure it's loaded before this script.
  document.addEventListener('DOMContentLoaded', function() {
    // Animate the container and fields in using GSAP
    gsap.from("h2", { 
      duration: 0.8, 
      opacity: 0, 
      y: -20, 
      ease: "power3.out"
    });
    
    gsap.from(".field", { 
      duration: 0.8, 
      opacity: 0, 
      y: 20, 
      stagger: 0.2, 
      ease: "power3.out"
    });
    
    gsap.from(".actions", {
      duration: 0.8, 
      opacity: 0, 
      scale: 0.9, 
      delay: 0.4, 
      ease: "back.out(1.7)"
    });
  });
</script>
